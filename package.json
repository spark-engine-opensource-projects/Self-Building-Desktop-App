{
  "name": "dynamic-app-builder",
  "version": "1.0.0",
  "description": "AI-powered Electron desktop application that generates and executes interactive web components using Claude (Anthropic's AI)",
  "main": "src/main.js",
  "homepage": "https://github.com/yourusername/dynamic-app-builder",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/dynamic-app-builder.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/dynamic-app-builder/issues"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "rebuild": "electron-rebuild",
    "compile": "tsc",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "electron",
    "ai",
    "claude",
    "dynamic",
    "code-generation",
    "anthropic",
    "desktop-app",
    "typescript",
    "javascript"
  ],
  "author": {
    "name": "Dynamic App Builder Team",
    "email": "contact@yourcompany.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "electron-rebuild": "^3.2.9",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.20.0",
    "axios": "^1.6.0",
    "dotenv": "^16.0.0",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "node-disk-info": "^1.3.0",
    "systeminformation": "^5.21.20",
    "electron-updater": "^6.1.7"
  },
  "build": {
    "appId": "com.yourcompany.dynamic-app-builder",
    "productName": "Dynamic App Builder",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ]
  }
}